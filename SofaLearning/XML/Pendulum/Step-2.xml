<?xml version="1.0"?>
<Node name="root" gravity="0 0 -9.81" dt="0.01" bbox="-1 -1 -1 1 1 1"> 

 <!-- Added grid and axis -->
 <!-- Fixed a particle in space using a constraint -->

    <RequiredPlugin name="Sofa.Component.Constraint.Projective"/>
    <RequiredPlugin name="Sofa.Component.Mass"/>
    <RequiredPlugin name="Sofa.Component.ODESolver.Forward"/> 
    <RequiredPlugin name="Sofa.Component.StateContainer"/>
    <RequiredPlugin name="Sofa.Component.Visual"/>
    <RequiredPlugin name="Sofa.Component.IO.Mesh"/> <!-- CHANGE HERE -->
    <RequiredPlugin name="Sofa.Component.Setting"/><!-- CHANGE HERE -->
    <RequiredPlugin name="Sofa.GL.Component.Rendering3D"/><!-- CHANGE HERE -->

    <VisualStyle displayFlags="showBehavior"/>
    <DefaultAnimationLoop/>
    <EulerExplicitSolver name="Explicit Euler Solver"/>  

    <VisualGrid size="10"/><!-- CHANGE HERE -->
    <LineAxis size="@grid.size"/><!-- CHANGE HERE -->
    <OglSceneFrame/><!-- CHANGE HERE -->

    <Node name="Object1"/>
        <MechanicalObject template="Vec3d" name="Particles" position="0 0 0" showObject="1" showObjectScale="10"/>
        <UniformMass template="Vec3d" name="Mass"/>
        <FixedProjectiveConstraint template="Vec3d" name="Fix Particles" indices="0"/>
    </Node>

</Node>    