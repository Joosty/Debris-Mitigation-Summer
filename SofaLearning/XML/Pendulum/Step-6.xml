<?xml version="1.0"?>
<Node name="root" gravity="0 0 -9.81" dt="0.01" bbox="-1 -1 -1 1 1 1"> 

 <!-- Connect the two objects. -->

    <RequiredPlugin name="Sofa.Component.Constraint.Projective"/>
    <RequiredPlugin name="Sofa.Component.Mass"/>
    <RequiredPlugin name="Sofa.Component.ODESolver.Forward"/> 
    <RequiredPlugin name="Sofa.Component.StateContainer"/>
    <RequiredPlugin name="Sofa.Component.Visual"/>
    <RequiredPlugin name="Sofa.Component.IO.Mesh"/> 
    <RequiredPlugin name="Sofa.Component.Setting"/>
    <RequiredPlugin name="Sofa.GL.Component.Rendering3D"/>

    <VisualStyle displayFlags="showBehavior"/>
    <DefaultAnimationLoop/>
    <EulerExplicitSolver name="Explicit Euler Solver"/>  

    <VisualGrid size="10"/>
    <LineAxis size="@grid.size"/>
    <OglSceneFrame/>

 <!-- Edit these -->

    <Node name="Object1" gravity="0 -9.81 0"/>
        <MechanicalObject template="Vec3" name="Particles"  position="0 0 0 1 0 0 2 0 0"  velocity="0 0 0"  force="0 0 0"  externalForce="0 0 0"  derivX="0 0 0"  restScale="1" showObject="1" showObjectScale="10"/>
        <UniformMass template="Vec3d" name="Mass"/>
        <FixedProjectiveConstraint template="Vec3d" name="Fix Particles" indices="0"/>
        <StiffSpringForceField template="Vec3d" name="Internal Spring" spring="0 1 100 0.1 1 1 2 100 0.1 1"/> 
    </Node>

 <!-- Edit these -->

    <Node name="Object2" gravity="0 -9.81 0"/>
        <VisualStyle name="visualStyle2" displayFlags="showVisual hideBehavior hideCollision hideMapping hideOptions" />
        <MechanicalObject template="Vec3d" name="Particles"  position="2 0 0"  velocity="0 0 0"  force="0 0 0"  externalForce="0 0 0"  derivX="0 0 0"  restScale="1" showObject="1" showObjectScale="10"/>
        <UniformMass template="Vec3d" name="Mass"/>
    </Node>    

    <!-- add the connection between the two objects -->

    <StiffSpringForceField template="Vec3d" name="Interaction Spring"  spring="1 0 10 0.1 1"  object1="@Object1"  object2="@Object2" />
</Node>    